@model IEnumerable<FML.WebApp.MVC.Models.ListaDeDesejos>

@{
    ViewData["Title"] = "Lista de Desejos";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Link</th>
            <th>Observação</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var desejo in Model)
        {
            <tr>
                <td>@desejo.Nome</td>
                <td>@desejo.Descricao</td>
                <td>@desejo.Preco</td>
                <td>@desejo.Link</td>
                <td>@desejo.Observacao</td>
                <td>
                    <a asp-controller="ListaDeDesejos" asp-action="Edit" asp-route-id="@desejo.Id" class="btn btn-primary">Editar</a>
                    <a asp-controller="ListaDeDesejos" asp-action="Delete" asp-route-id="@desejo.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="ListaDeDesejos" asp-action="Create" class="btn btn-success">Adicionar Novo Desejo</a>
