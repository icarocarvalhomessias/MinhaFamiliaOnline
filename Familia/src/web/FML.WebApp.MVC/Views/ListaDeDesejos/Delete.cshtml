@model FML.WebApp.MVC.Models.ListaDeDesejos

@{
    ViewData["Title"] = "Excluir Desejo";
}

<h2>@ViewData["Title"]</h2>

<h3>Você tem certeza que deseja excluir este desejo?</h3>
<div>
    <h4>Desejo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Model.Descricao
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="ListaDeDesejos" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
